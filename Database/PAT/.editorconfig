# Add any specific settings related to .NET MAUI here if needed

# Additional settings for other languages (optional)
[*.{xml,json,config}]
indent_size = 2

[*.{xaml}]
indent_size = 2

# Exclude specific directories
[bin/**,obj/**]
indent_size = 4

# Additional code style rules
# Disallow extra blank lines
dotnet_diagnostic.SA1507.severity = error
# Disable IDE0003 rule
dotnet_diagnostic.IDE0003.severity = none


